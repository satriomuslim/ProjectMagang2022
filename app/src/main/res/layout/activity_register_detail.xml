<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.register.RegisterDetailActivity">

    <TextView
        style="@style/DefaultTextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="Pilih role kamu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:weightSum="2">

        <TextView
            android:id="@+id/btn_parent"
            style="@style/DefaultTextMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Orang Tua"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="16dp"
            android:drawableTop="@drawable/ill_home_parent"
            android:drawablePadding="8dp"
            android:background="@drawable/bg_rounded_white_stoke_grey"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btn_pedagogue"
            style="@style/DefaultTextMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pedagogue"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:drawableTop="@drawable/ill_home_parent"
            android:drawablePadding="8dp"
            android:background="@drawable/bg_rounded_white_stoke_grey"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/ButtonDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:text="Daftar" />

</RelativeLayout>